<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.week10.CatatanController">
   <children>
      <!-- Sidebar kiri -->
      <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="500.0" prefWidth="150.0" style="-fx-background-color: #A3DDD3;">
         <children>
            <Button fx:id="btnLogout" layoutX="48.0" layoutY="460.0" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #F55454; -fx-text-fill: white;" text="Logout" />
         </children>
      </AnchorPane>

      <!-- Judul -->
      <Label layoutX="200.0" layoutY="30.0" text="TODO-LIST">
         <font>
            <Font name="Arial Bold" size="30.0" />
         </font>
      </Label>

      <!-- Search box -->
      <TextField fx:id="searchBox" layoutX="200.0" layoutY="80.0" prefWidth="250.0" promptText="Search" />

      <!-- Tabel -->
      <TableView fx:id="tableViewCatatan" layoutX="200.0" layoutY="120.0" prefHeight="300.0" prefWidth="750.0">
         <columns>
            <TableColumn fx:id="id" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="judul" prefWidth="150.0" text="Judul" />
            <TableColumn fx:id="konten" prefWidth="200.0" text="Deskripsi" />
            <TableColumn fx:id="deadline" prefWidth="150.0" text="Deadline" />
            <TableColumn fx:id="countdown" prefWidth="200.0" text="Countdown" />
            <TableColumn fx:id="status" prefWidth="100.0" text="Status" />
         </columns>
      </TableView>

      <!-- Tombol Add & Delete -->
      <Button fx:id="btnTambahCatatan" layoutX="911.0" layoutY="440.0" mnemonicParsing="false" onAction="#onBtnAddClick" style="-fx-background-color: #57E2D2; -fx-text-fill: white;" text="Add" />
      <Button fx:id="btnHapusCatatan" layoutX="846.0" layoutY="440.0" mnemonicParsing="false" onAction="#onBtnHapus" style="-fx-background-color: #F55454; -fx-text-fill: white;" text="Delete" />
   </children>
</AnchorPane>
