<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.week10.CatatanController" prefHeight="500.0" prefWidth="1000.0">
   <children>
      <!-- Sidebar kiri -->
      <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="500.0" prefWidth="150.0" style="-fx-background-color: #A3DDD3;">
         <children>
            <Button fx:id="btnLogout" layoutX="20.0" layoutY="450.0" mnemonicParsing="false" text="Logout"
                    style="-fx-background-color: #F55454; -fx-text-fill: white;" onAction="#handleLogout"/>
         </children>
      </AnchorPane>

      <!-- Judul -->
      <Label layoutX="200.0" layoutY="30.0" text="TODO-LIST">
         <font>
            <Font name="Arial Bold" size="30.0"/>
         </font>
      </Label>

      <!-- Search box -->
      <TextField fx:id="searchBox" layoutX="200.0" layoutY="80.0" promptText="Search" prefWidth="250.0" />

      <!-- Tabel -->
      <TableView fx:id="tableViewCatatan" layoutX="200.0" layoutY="120.0" prefHeight="300.0" prefWidth="750.0">
         <columns>
            <TableColumn fx:id="id" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="judul" prefWidth="150.0" text="Judul" />
            <TableColumn fx:id="konten" prefWidth="200.0" text="Deskripsi" />
            <TableColumn fx:id="deadline" prefWidth="150.0" text="Deadline" />
            <TableColumn fx:id="countdown" prefWidth="200.0" text="Countdown" />
            <TableColumn fx:id="status" prefWidth="100.0" text="Status" />
         </columns>
      </TableView>

      <!-- Tombol Add & Delete -->
      <Button fx:id="btnTambahCatatan" layoutX="870.0" layoutY="440.0" mnemonicParsing="false" text="Add"
              style="-fx-background-color: #57E2D2; -fx-text-fill: white;" onAction="#onBtnAddClick"/>
      <Button fx:id="btnHapusCatatan" layoutX="790.0" layoutY="440.0" mnemonicParsing="false" text="Delete"
              style="-fx-background-color: #F55454; -fx-text-fill: white;" onAction="#onBtnHapus"/>
   </children>
</AnchorPane>
